{
  "name": "@hookform/error-message",
  "version": "1.0.0",
  "description": "React Hook Form error message component",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "umd:main": "dist/index.umd.min.js",
  "unpkg": "dist/index.umd.min.js",
  "jsdelivr": "dist/index.umd.min.js",
  "jsnext:main": "index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && rollup -c",
    "clean": "rimraf dist",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "lint:types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-hook-form/error-message.git"
  },
  "author": "bluebill1049 <bluebill1049@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-hook-form/error-message/issues"
  },
  "homepage": "https://github.com/react-hook-form/error-message#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.4",
    "@types/react-test-renderer": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "prettier": "^1.19.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hook-form": "^6.0.0-rc.3",
    "react-test-renderer": "^16.9.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.20.3",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-hook-form": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:types && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
